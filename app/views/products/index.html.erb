<h1>Listing Products</h1>

<%= link_to 'New product', new_product_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>Quantity Type</th>
    <th>Price</th>
    <th>Bill</th>
    <th>Shop</th>
    <th colspan="4">Options</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.quantity %></td>
      <td><%= product.quantity_type %></td>
      <td><%= product.price %></td>
      <td><%= link_to product.bill.buy_date.to_formatted_s(:month_day_year), bill_path(product.bill) %></td>
      <td><%= link_to product.bill.shop.name, shop_path(product.bill.shop) %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>