<h1>Listing shops</h1>

<%= link_to 'New shop', new_shop_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th colspan="4">Options</th>
  </tr>
 
  <% @shops.each do |shop| %>
    <tr>
      <td><%= shop.name %></td>
      <td><%= shop.amount %></td>
      <td><%= link_to 'Shop bills', shop_bills_path(shop) %></td>
      <td><%= link_to 'Show', shop_path(shop) %></td>
      <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
      <td><%= link_to 'Destroy', shop_path(shop),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>